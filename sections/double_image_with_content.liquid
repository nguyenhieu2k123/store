<div id="section-{{ section.id }}" class="page-width page-width-desktop custom-section">
  <h2>{{ section.settings.heading }}</h2>
  <div>
    <div class="image-content">
      <img src="{{ section.settings.left_img | image_url }}" width="385" height="628" alt="Image" />
      <img src="{{ section.settings.right_img | image_url}}" width="385" height="628" alt="Image" />
    </div>
    <div class="text-content">{{ section.settings.text_ne }}</div>
  </div>
</div>
<style>
  .custom-section{
    padding:48px 0;
  }
  .custom-section .image-content{
    display: flex;
    flex-direction: row;
    gap: 32px;
    justify-content:center;
    margin: 32px 0;
  }
  .custom-section .image-content img{
    max-width: 385px;
    object-fit: contain;
    border-radius: 16px;
  }
  .custom-section h2{
    font-family: Lora;
    font-size: 40px;
    font-weight: 400;
    line-height: 54px;
    text-align: center;
    margin:0;
  }
  .custom-section .text-content{
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .custom-section .text-content p{
    font-family: Lato;
    font-size: 16px;
    font-weight: 400;
    line-height: 22px;
    text-align: center;
    max-width: 810px;
    margin: auto;
  }
</style>
{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text_ne",
      "label": "Content",
      "info": "Enter your text content here."
    },
    {
        "type": "image_picker",
        "id": "left_img",
        "label": "Left image"
      },
    {
        "type": "image_picker",
        "id": "right_img",
        "label": "Right image"
      },
  ],
  "presets": [
    {
      "name": "Custom Section",
      "category": "New Section"
    }
  ]
}
{% endschema %}
