<div class="page-width page-width-desktop custom-section">
  <h2>{{ section.settings.heading }}</h2>
  <div>
    <div class="image-content">
      
    </div>
    <div class="text-content">{{ section.settings.text_ne }}</div>
  </div>
</div>
<style>
  .custom-section .image-content{
    display: flex;
    flex-direction: row;
    gap: 32px;
  }
  .custom-section h2{
    font-family: Lora;
    font-size: 40px;
    font-weight: 400;
    line-height: 54px;
    text-align: center;
  }
  .custom-section .text-content p{
    font-family: Lato;
    font-size: 16px;
    font-weight: 400;
    line-height: 22px;
    text-align: center;
    max-width: 810px;
    margin: auto;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
</style>
{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text_ne",
      "label": "Content",
      "info": "Enter your text content here."
    }
  ],
  "presets": [
    {
      "name": "Custom Section",
      "category": "New Section"
    }
  ]
}
{% endschema %}
